{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Target",
  "type": "object",
  "properties": {
    "specifier": {
      "description": "The original specifier provided by the user.",
      "type": "string"
    },
    "local": {
      "description": "The path to the local repository.",
      "$ref": "#/$defs/LocalGitRepo"
    },
    "remote": {
      "description": "The url of the remote repository, if any.",
      "anyOf": [
        {
          "$ref": "#/$defs/RemoteGitRepo"
        },
        {
          "type": "null"
        }
      ]
    },
    "package": {
      "description": "The package associated with the target, if any.",
      "anyOf": [
        {
          "$ref": "#/$defs/Package"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "required": [
    "specifier",
    "local"
  ],
  "$defs": {
    "LocalGitRepo": {
      "type": "object",
      "properties": {
        "path": {
          "description": "The path to the repo.",
          "type": "string"
        },
        "git_ref": {
          "description": "The Git ref we're referring to.",
          "type": "string"
        }
      },
      "required": [
        "path",
        "git_ref"
      ]
    },
    "RemoteGitRepo": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri"
        },
        "known_remote": {
          "anyOf": [
            {
              "$ref": "#/$defs/KnownRemote"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "url"
      ]
    },
    "KnownRemote": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "GitHub": {
              "type": "object",
              "properties": {
                "owner": {
                  "type": "string"
                },
                "repo": {
                  "type": "string"
                }
              },
              "required": [
                "owner",
                "repo"
              ]
            }
          },
          "required": [
            "GitHub"
          ],
          "additionalProperties": false
        }
      ]
    },
    "Package": {
      "type": "object",
      "properties": {
        "purl": {
          "description": "A package url for the package.",
          "type": "string",
          "format": "uri"
        },
        "name": {
          "description": "The package name",
          "type": "string"
        },
        "version": {
          "description": "The package version",
          "type": "string"
        },
        "host": {
          "description": "What host the package is from.",
          "$ref": "#/$defs/PackageHost"
        }
      },
      "required": [
        "purl",
        "name",
        "version",
        "host"
      ]
    },
    "PackageHost": {
      "type": "string",
      "enum": [
        "Npm",
        "PyPI"
      ]
    }
  }
}